@model IEnumerable<FestivalCarthage.Models.Concert>

@{
    ViewData["Title"] = "Concerts";
}

<div class="container my-4">
    <h1 class="text-center">@ViewData["Title"]</h1>
    
    <div class="row mb-4">
        <div class="col-md-12">
            <a class="btn btn-primary" href="@Url.Action("Create", "Concerts")">
                <i class="bi bi-plus-circle"></i> Ajouter un concert
            </a>
        </div>
    </div>

    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Artist</th>
                <th>Date</th>
                <th>Heure</th>
                <th>Place</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var concert in Model)
            {
                <tr>
                    <td>@concert.Name</td>
                    <td>@concert.Artist</td>
                    <td>@concert.Date.ToString("d")</td>
                    <td>@concert.HeureConcert.ToString(@"hh\:mm")</td>
                    <td>@concert.Place</td>
                    <td>@concert.Price.ToString("C")</td>
                    <td>
                        <a href="@Url.Action("Details", "Concerts", new { id = concert.Id })" class="btn btn-info btn-sm">
                            <i class="bi bi-eye"></i> DÃ©tails
                        </a>
                        <a href="@Url.Action("Edit", "Concerts", new { id = concert.Id })" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil"></i> Modifier
                        </a>
                        <a href="@Url.Action("Delete", "Concerts", new { id = concert.Id })" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Supprimer
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
