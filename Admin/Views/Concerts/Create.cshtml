@model FestivalCarthage.Models.Concert

@{
    ViewData["Title"] = "Create Concert";
}

<div class="container mt-5">
    <h1 class="text-center">@ViewData["Title"]</h1>

    <form asp-action="Create" method="post">
        <div class="form-group mb-3">
            <label asp-for="Name" class="control-label fw-bold"></label>
            <input asp-for="Name" class="form-control" placeholder="Enter concert name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Artist" class="control-label fw-bold"></label>
            <input asp-for="Artist" class="form-control" placeholder="Enter artist name" />
            <span asp-validation-for="Artist" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Date" class="control-label fw-bold"></label>
            <input asp-for="Date" class="form-control" type="date" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="HeureConcert" class="control-label fw-bold"></label>
            <input asp-for="HeureConcert" class="form-control" type="time" />
            <span asp-validation-for="HeureConcert" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Place" class="control-label fw-bold"></label>
            <input asp-for="Place" class="form-control" placeholder="Enter concert location" />
            <span asp-validation-for="Place" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Price" class="control-label fw-bold"></label>
            <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="Enter concert price" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <!-- New Fields Added -->
        <div class="form-group mb-3">
            <label asp-for="Description" class="control-label fw-bold"></label>
            <textarea asp-for="Description" class="form-control" placeholder="Enter concert description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="AvailableSeats" class="control-label fw-bold"></label>
            <input asp-for="AvailableSeats" type="number" class="form-control" min="0" placeholder="Enter available seats" />
            <span asp-validation-for="AvailableSeats" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Image" class="control-label fw-bold"></label>
            <input asp-for="Image" type="url" class="form-control" placeholder="Enter concert image URL" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>

        <div class="form-group text-center">
            <button type="submit" class="btn btn-success btn-lg">Create Concert</button>
        </div>
    </form>

    <div class="mt-3 text-center">
        <a href="@Url.Action("Index")" class="btn btn-link">Back to List</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
